<p id="notice"><%= notice %></p>

<p>
  <strong>UserName:</strong>
  <%= @user.username %>
</p>
<p>
  <strong>Total posts:</strong>
  <%= @user.no_of_articles %>
</p>
<h3>Articles</h3>
<ul class="list-group">
  <% @user.articles.each do |article| %>
    <li class="list-group-item d-flex justify-content-between h6 my-2"><%= link_to article.title, article_path(article) %>
    <% if same_user %>
      <div class="user-link-box">
        <%= link_to '<i class="fas fa-edit"></i>'.html_safe, edit_user_article_path(current_user, article) %>
        <%= link_to '<i class="fas fa-trash"></i>'.html_safe, article_path(article), method: "delete", data: { confirm: "Do you want to delete this article?" } %>   
      </div>
    <% end %>
    </li>
  <% end %>
</ul>
