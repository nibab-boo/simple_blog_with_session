<div class="card my-3 border-0">
  <div class="card-body">
    <h3 class="inline-block card-title border-bottom py-2">
      <%= @article.title %>
      <%= link_to '<i class="fas fa-edit"></i>'.html_safe, edit_article_path %>
      <%= link_to '<i class="fas fa-trash"></i>'.html_safe, article_path, method: "delete", data: { confirm: "Do you want to delete this article?" } %>
    </h3>
    <p class="card-text"><%= @article.content %></p>
  </div>
</div>