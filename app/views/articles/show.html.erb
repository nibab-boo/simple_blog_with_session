<div class="card my-3 border-0">
  <div class="card-body">
    <h3 class="inline-block card-title border-bottom py-2">
      <%= @article.title %>
      <% if same_user %>
        <small><%= link_to '<i class="fas fa-edit"></i>'.html_safe, edit_user_article_path(current_user, @article) %></small>
        <small><%= link_to '<i class="fas fa-trash"></i>'.html_safe, article_path(@article), method: "delete", data: { confirm: "Do you want to delete this article?" } %></small>  
      <% end %>
    </h3>
    <p class="card-text"><%= simple_format((@article.content)) %></p>
  </div>
</div>